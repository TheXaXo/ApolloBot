{
  "manifest_version": 2,
  "name": "ApolloBot for Instagram™",
  "version": "1.0.6",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "description": "ApolloBot helps you to clean up your Instagram™ account from people you don't want to follow anymore and also grow it in a natural way. It has a distinct feature set made really easy to use.",
  "permissions": [
    "storage",
    "downloads",
    "cookies",
    "*://*.instagram.com/*"
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.instagram.com/*"
      ],
      "css": [
        "css/inject.css"
      ],
      "js": [
        "js/jquery-3.5.1.min.js",
        "js/inject.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "images/rocket32.png",
    "html/main.html"
  ],
  "content_security_policy": "script-src 'self' 'sha256-Y0/J/Na3KPSGYEBV0F37b+GyMxIq+lETspHMQyGJedc='; object-src 'self'"
}